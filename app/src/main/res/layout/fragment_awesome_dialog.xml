<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <com.company.zicure.campusconnect.customView.LabelView
            android:id="@+id/title_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_four"
            android:text="หัวข้อ"
            android:textAlignment="viewStart"
            android:textColor="@android:color/black"
            android:textSize="@dimen/size_text_medium" />

        <com.company.zicure.campusconnect.customView.LabelView
            android:id="@+id/txt_message_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="@dimen/padding_eight"
            android:text="คำบรรยาย"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/size_text_small" />

        <com.company.zicure.campusconnect.customView.EditTextView
            android:id="@+id/edit_pin_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:maxLength="4"
            android:padding="@dimen/padding_eight"
            android:layout_gravity="center_horizontal"
            android:hint="PIN CODE"
            android:maxEms="10"
            android:textColor="@android:color/darker_gray"
            android:inputType="number"
            android:textSize="@dimen/size_text_small"
            android:visibility="gone"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:background="@android:color/white">

        <com.company.zicure.campusconnect.customView.ButtonDialogView
            android:id="@+id/btn_dialog_positive"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/selector_btn_dialog"
            android:text="OK"
            android:textAlignment="center"
            android:textSize="@dimen/size_text_small"
            android:layout_marginStart="@dimen/padding_four"
            android:textColor="@color/colorBlueStrongNormal" />

        <com.company.zicure.campusconnect.customView.ButtonDialogView
            android:id="@+id/btn_dialog_negative"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginEnd="@dimen/padding_four"
            android:textSize="@dimen/size_text_small"
            android:layout_alignTop="@+id/btn_dialog_positive"
            android:layout_toStartOf="@id/btn_dialog_positive"
            android:background="@drawable/selector_btn_dialog"
            android:text="Cancel"
            android:textAlignment="center"
            android:textColor="@color/colorBlueStrongNormal" />
    </RelativeLayout>

</LinearLayout>