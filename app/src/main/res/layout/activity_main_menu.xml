<?xml version="1.0" encoding="utf-8"?>
<com.company.zicure.campusconnect.view.viewgroup.FlyOutContainer
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.company.zicure.campusconnect.activity.MainMenuActivity">

    <include
        layout="@layout/content_drawer_navigation"/>

    <RelativeLayout
        android:id="@+id/liner_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@drawable/dropshadow"
            android:id="@+id/shadow" />

        <include
            layout="@layout/layout_main_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@id/shadow"/>
    </RelativeLayout>
</com.company.zicure.campusconnect.view.viewgroup.FlyOutContainer>
