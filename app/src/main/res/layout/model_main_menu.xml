<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/padding_small"
    android:layout_marginStart="@dimen/padding_small"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/item_card_main_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_bloc"
        android:padding="@dimen/padding_eight"
        android:background="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_btn_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="@null"
                android:cropToPadding="true"
                android:padding="@dimen/padding_eight"
                android:layout_weight="1"
                android:scaleType="centerInside" />

            <com.company.zicure.campusconnect.customView.LabelView
                android:id="@+id/topic_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/padding_eight"
                android:textColor="#4e4e4e"
                android:textSize="@dimen/size_text_small"
                android:textStyle="bold" />

        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>
