<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.company.zicure.campusconnect.fragment.UpdatePasswordFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_extra_large"
        android:paddingTop="@dimen/padding_extra_large">

        <com.company.zicure.campusconnect.customView.LabelView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_large"
            android:text="@string/title_update_password_th"
            android:textColor="@android:color/black"
            android:textSize="@dimen/size_text_extra_large" />

        <include layout="@layout/content_update_password" />
    </LinearLayout>

</FrameLayout>
